{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"timestamp\":\"'$(date -u +%Y-%m-%dT%H:%M:%SZ)'\",\"event_type\":\"tool_start\",\"tool_name\":\"'\"$TOOL_NAME\"'\",\"agentId\":\"main\"}' >> /tmp/agent-events.jsonl"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"timestamp\":\"'$(date -u +%Y-%m-%dT%H:%M:%SZ)'\",\"event_type\":\"tool_end\",\"tool_name\":\"'\"$TOOL_NAME\"'\",\"agentId\":\"main\"}' >> /tmp/agent-events.jsonl"
          }
        ]
      }
    ]
  }
}
