# Partner Portal Environment Variables
# Copy this to .env.local and fill in your values

# Database (PostgreSQL for production, SQLite for local dev)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/partner_portal"

# NextAuth.js
NEXTAUTH_SECRET="generate-a-secret-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Airtable (for syncing content)
AIRTABLE_API_KEY="patXXX..."
AIRTABLE_BASE_ID="appXXX..."
AIRTABLE_CONTENT_CALENDAR_TABLE_ID="tblXXX..."

# Portal Branding
PORTAL_NAME="Partner Portal"

# Email (Resend - for password reset emails)
RESEND_API_KEY="re_XXX..."
EMAIL_FROM="Partner Portal <noreply@yourdomain.com>"

# Optional: Image feedback API key (for integration with image generation)
IMAGE_FEEDBACK_API_KEY=""
